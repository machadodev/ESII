{
  "name": "app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "bootstrap": "^5.1.0",
    "cypress": "^8.4.0",
    "next": "^11.0.1",
    "node-sass": "^6.0.1",
    "react": "^17.0.2",
    "react-bootstrap": "^2.0.0-beta.4",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.3.0",
    "react-scripts": "4.0.3",
    "react-select": "^4.3.1",
    "react-uuid": "^1.0.2",
    "sass": "^1.37.5",
    "sass-loader": "^12.1.0",
    "web-vitals": "^1.0.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "yarn test:unit",
    "test:unit": "react-scripts test --watchAll=false --passWithNoTests",
    "test:coverage": "react-scripts test --watchAll=false --passWithNoTests --coverage --collectCoverageFrom=!src/reportWebVitals.js --collectCoverageFrom=!src/index.js",
    "test:ui": "cypress run",
    "lint": "eslint src --fix",
    "eject": "react-scripts eject",
    "prepare": "husky install",
    "watch:css": "postcss -w ./src/index.css -o ./src/App.css"
  },
  "lint-staged": {
    "**/*.js": [
      "prettier --write",
      "yarn lint",
      "yarn test --bail --findRelatedTests"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "autoprefixer": "^9",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.25.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^7.0.0",
    "lint-staged": "^11.1.2",
    "prettier": "^2.3.2"
  }
}
